{  
   "openapi":"3.0.1",
   "info":{  
      "title":"VDC Blueprint Repository Engine",
      "version":"0.0.1"
   },
   "servers":[  
      {  
         "description":"VDC Blueprint Repository server in CS",
         "url":"http://localhost:8080"
      }
   ],
   "paths":{  
      "/blueprints":{  
         "get":{  
            "description":"Blueprints Retrieval",
            "parameters":[  
               {  
                  "name":"section",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"array",
                     "items":{  
                        "type":"string"
                     }
                  },
                  "style":"form",
                  "explode":true
               },
               {  
                  "name":"filter",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"array",
                     "items":{  
                        "type":"string"
                     }
                  },
                  "style":"form",
                  "explode":true
               }
            ],
            "responses":{  
               "200":{  
                  "description":"successful operation",
                  "content":{  
                     "application/json":{  
                        "schema":{  
                           "type":"object",
                           "properties":{  
                              "_embedded":{  
                                 "type":"array"
                              },
                              "_returned":{  
                                 "type":"integer"
                              }
                           }
                        }
                     }
                  }
               }
            }
         },
         "post":{  
            "description":"Blueprint Creation",
            "requestBody":{  
               "content":{  
                  "application/json":{  
                     "schema":{  
                        "description":"Abstract VDC Blueprint(s) to be stored in the VDC Blueprint Repository",
                        "anyOf":[  
                           {  
                              "type":"object"
                           },
                           {  
                              "type":"array"
                           }
                        ]
                     }
                  }
               }
            },
            "responses":{  
               "201":{  
                  "description":"successful operation",
                  "content":{  
                     "application/json":{  
                        "schema":{  
                           "type":"object",
                           "properties":{  
                              "blueprint_id":{  
                                 "type":"array"
                              }
                           },
                           "required":[  
                              "blueprint_id"
                           ]
                        }
                     }
                  }
               }
            }
         }
      },
      "/blueprints/{blueprint_id}":{  
         "get":{  
            "description":"Blueprint Retrieval by id",
            "parameters":[  
               {  
                  "name":"blueprint_id",
                  "in":"path",
                  "required":true,
                  "schema":{  
                     "type":"string"
                  }
               },
               {  
                  "name":"section",
                  "in":"query",
                  "required":false,
                  "schema":{  
                     "type":"array",
                     "items":{  
                        "type":"string"
                     }
                  },
                  "style":"form",
                  "explode":true
               }
            ],
            "responses":{  
               "200":{  
                  "description":"successful operation",
                  "content":{  
                     "application/json":{  
                        "schema":{  
                           "type":"object"
                        }
                     }
                  }
               }
            }
         },
         "delete":{  
            "description":"Blueprint Deletion by id",
            "parameters":[  
               {  
                  "name":"blueprint_id",
                  "in":"path",
                  "required":true,
                  "schema":{  
                     "type":"string"
                  }
               }
            ],
            "responses":{  
               "204":{  
                  "description":"successful operation"
               }
            }
         },
         "patch":{  
            "description":"Blueprint Update by id",
            "parameters":[  
               {  
                  "name":"blueprint_id",
                  "in":"path",
                  "required":true,
                  "schema":{  
                     "type":"string"
                  }
               }
            ],
            "requestBody":{  
               "content":{  
                  "application/json":{  
                     "schema":{  
                        "type":"object",
                        "description":"all the fields to be updated",
                        "example":{  
                           "INTERNAL_STRUCTURE.Overview":{  
                              "name":"VDC_1",
                              "description":"Information about the patients in Milan",
                              "tags":[  
                                 {  
                                    "method_name":"get_patient_details",
                                    "tags":[  
                                       "Milan",
                                       "patients"
                                    ]
                                 }
                              ]
                           },
                           "INTERNAL_STRUCTURE.Flow.platform":"Node-RED"
                        }
                     }
                  }
               }
            },
            "responses":{  
               "200":{  
                  "description":"successful operation"
               }
            }
         }
      }
   }
}
